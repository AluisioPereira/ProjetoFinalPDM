<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ao_vivo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorRelative"
    tools:context="pdm.ifpb.edu.br.projetofinal.AoVivo">
    <VideoView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/videoViewAoVivo"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="CAM AS324NH-526"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colortextcam"
        android:textSize="@dimen/text_size_medium"
        android:id="@+id/textNumCamAoVivo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <ImageButton
        app:srcCompat="@drawable/flash1"
        android:layout_marginBottom="22dp"
        android:id="@+id/imageButton"
        android:background="@drawable/arrendonda"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textNumCamAoVivo"
        android:layout_toEndOf="@+id/textNumCamAoVivo"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_width="60dp"
        android:layout_height="60dp" />

</RelativeLayout>
